 <!-- Include jQuery and Toastr CSS and JS -->
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  {{!-- <script src="/static/js/add_member.js"></script> --}}

  <title>Profile</title>
</head>
<body>
    {{> navbar}}
    <a class="my_profile" data-profile-id="{{my_status._id}}"></a>
    <div class="container-fluid row mt-4 justify-content-center">
      <div class="col-md-3 ms-3 text-center chatNamesHead" style="color:white;">
        <h3>Chats</h3>
        <div class="chatNames" style=" color:white;">
          <ul style="list-style-type: none; padding: 0;">
            {{#each other_users}}
            <li class="userList" style="border-bottom: 1px solid #484848; padding: 10px 0;" data-post-id="{{this._id}}">
              <div style="position: relative; display: inline-block;">
                <img src="/static/img/{{this.dp_image}}" style="border-radius: 50%; width: 30px; height: 30px; border:1px solid white" alt="{{this.name}}">
                {{#ifEquals this.is_online '1'}}
                  <span class="online-status" id="{{this._id}}-status"></span>
                  {{else}}
                  <span class="offline-status" id="{{this._id}}-status"></span>
                {{/ifEquals}}
              </div>
              <button id="chatsButton" style="border: none"><b>{{this.name}}</b></button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>

      <div class="col-md-8 ms-3 text-center initial" style="color:white; display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center;">
          <b><i style="font-family: cursive;">Get Together</i></b>
          <p style="font-family:monospace">Chat with your Friends and Family...</p>
        </div>
      </div>


      <div class="col-md-8 ms-3 chatBody">
        <div class="d-flex chatName">
          
        </div>
        <div class="chatsBody">

        </div>
        <form class="d-flex mt-2 chat-form">
          <input type="text" placeholder="Enter Message..." class="form-control message" style="width: 2500px;">
          <button type="submit" class="btn btn-primary ms-2">Send</button>
        </form>
      </div>


    </div>
<script src="static/js/navbar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>