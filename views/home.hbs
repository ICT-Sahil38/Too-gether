  <title>Home</title> 
 </head>
 <body>
    {{> navbar}}

   <div class="container-fluid">
      <div class="row" style="height:675px">
         <div class="d-flex justify-content-left align-items-left">
            <div class="card col-md-3 profile" style="background-color:rgb(255, 255, 255); border:1px solid black">
               <div class="card-body text-center">
                  <div class="mt-3 mb-4">
                  <img src="../static/img/{{profile_pic}}"
                     class="rounded-circle img-fluid" style="width: 100px;" />
                  </div>
                  <h4 class="mb-5">{{username}}</h4>
                  <div class="d-flex justify-content-between text-center mt-2 mb-2">
                     <div class="me-3">
                        <p class="mb-1 h5">{{total_images}}</p>
                        <p class="text-muted mb-0">Posts</p>
                     </div>
                     <div>
                        <p class="mb-1 h5">{{followers}}</p>
                        <p class="text-muted mb-0">Followers</p>
                     </div>
                     <div>
                        <p class="mb-1 h5">{{following}}</p>
                        <p class="text-muted mb-0">Following</p>
                     </div>
                  </div>
               </div>
               <div class="direct-message" style="margin: 30px;">
                  <button id="directMessage" type="button" class="btn btn-primary" style="width:315px;">Direct Message</button>
                  <form id="dm_from"></form>
               </div>
            </div>

            <div class="col-md-9 mx-auto text-center post" style="height:670px">
               <h1 style="color: rgb(255, 255, 255);">Posts</h1>

               
               <div class="scroll" style="height: 600px;">
                  {{#each posts}}
                  <div class="px-5 p-2 text-center">
                     <div class="px-5 ms-3 d-flex">
                        <img src="../static/img/{{this.dp}}" height="25px" width="25px" style="border-radius: 50%;" class="me-2">
                        <a onclick="openuserprofile({{this.username}})" style="color: white;">{{this.username}}</a>
                        <hr style="background-color: white;">
                     </div>
                     <div>
                        <img src="../static/img/{{this.post}}" height="500px">
                     </div>
                     <div class="mt-3 px-5">
                        <div class="d-flex justify-content-between">
                              {{!-- <div class="p-2 ms-3 post-like-container" id="likes" onclick="like_me('{{this.username}}','{{this.post}}');">
                                 <i class="bi {{#if this.liked}}bi-heart-fill{{else}}bi-heart{{/if}} like-icon" id="like" style="color: white;"></i>
                                 <a style="color: white;">Like</a>
                              </div> --}}
                              {{!-- <div class="p-2 ms-3 post-like-container" id="likes" onclick="like_me('{{this.username}}','{{this.post}}','{{this._id}}');">
                                 <i class="bi bi-heart like-icon" id="like_{{this._id}}" style="color: white;"></i>
                                 <a style="color: white;">Like</a>
                              </div> --}}
                              <!-- home.hbs -->

                              <div class="p-2 ms-3 post-like-container" data-post-id="{{this._id}}" data-post-username="{{this.username}}">
                                 <i class="bi {{#if this.liked}}bi-heart-fill{{else}}bi-heart{{/if}} like-icon" id="like_{{this._id}}" style="color: white;"></i>
                                 <a style="color: white;">Like</a>
                              </div>


                              <!-- In your post HTML, update each post container to include data attributes for the post details -->
                              <div class="post" data-post-id="{{this._id}}" data-post-image="{{this.imageURL}}" data-post-username="{{this.username}}">
                                 <div class="p-2">
                                    <i class="bi bi-chat-dots" style="color: white; cursor:pointer;" data-toggle="modal" data-target=".comments"></i>
                                    <a style="color: white; cursor:pointer;" data-toggle="modal" data-target=".comments">Comment</a>
                                 </div>
                                 <!-- Other post details -->
                              </div>


                              <div class="p-2 me-3 post-save-container" data-post-id="{{this._id}}">
                                 <i class="bi {{#if this.saved}}bi-bookmark-fill{{else}}bi-bookmark{{/if}}" id="save_{{this._id}}" style="color: white;"></i>
                                 <a style="color: white;">Save</a>
                              </div>



                        </div>
                        <div style="text-align: left;">
                           <div>
                              <span style="color: white;"><b>{{this.likes.length}} Likes</b></span>
                           </div>
                           <div>
                              <span style="color: white;"><b>{{this.username}} </b>{{this.caption}}</span>
                           </div>

                           <div class="d-flex">
                              <input type="text" placeholder="Post the comment" class="comment-input" style="width: 850px; background-color:black; border-left:none; border-right:none; border-top:none; color:white;">
                              <button type="button" class="btn btn-primary ms-2 comment-button" data-post-id="{{this._id}}">Post</button>
                           </div>


                        </div>
                        <hr style="border: 1px solid white;">

                     </div>
                  </div>
               {{/each}}
               </div>

            </div>      
         </div>
      </div>
   </div>
   {{> comment}}

   {{> addpost}}


<script src="static/js/navbar.js"></script>
<script src="static/js/openprofile.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
   document.getElementById("directMessage").addEventListener("click",()=>{
      action="/direct-message";
      localStorage.setItem("nav_active","directMessage");
      document.getElementById("dm_from").action = action;
      document.getElementById("dm_from").submit();
   })
</script>
</body>
</html>